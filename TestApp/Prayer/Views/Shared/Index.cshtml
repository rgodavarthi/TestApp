@using Prayer.View_Model;
@model PrayerRequestListViewModel

@{
    ViewBag.Title = "";
}

@using (Html.BeginForm())
{ 
    <!-- Hidden fields-->
     @Html.HiddenFor(m => m.EventData)
    
    <div class="container">
        <!--<div class="form-group">-->
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h1 class="panel-title">Enter Your Prayer Requests</h1>
            </div>
        <div class="panel-body">
            <div class="form-group">
                @Html.TextAreaFor(m => m.PrayerRequest, 5, 0, new { @class = "form-control", style = "min-width: 100%" })
                <label for="submittedBy">Submitted By</label>
                @Html.TextBoxFor(m => m.SubmittedBy, new { @class = "form-control" })
                @*<input class="form-control" id="submittedBy" type="text" />*@
            </div>
        </div>
        <div class="panel-footer">
            <button id="btnSubmit" class="btn btn-sm btn-primary" data-pdsa-action="submit">
                <i class="glyphicon glyphicon-bell"></i>
                &nbsp; Submit
            </button>
            <button id="btnReset" class="btn btn-sm btn-primary" data-pdsa-action="resetsubmit">
                <i class="glyphicon glyphicon-share-alt"></i>
                &nbsp; Reset
            </button>
        </div>
    </div>

        @*<div>
                <form name="prayerRequest" action="/Prayer/SavePrayer/" method="post">
                    <label for="prayerrequest">Prayer Request:</label>
                    <textarea class="form-control" rows="4" style="min-width: 100%" id="prayerrequest" name="PrayerText"></textarea> <p></p>
                    <label for="usr">Name:</label>
                    <input type="text" class="form-control" id="usr" name="SubmittedBy"> <p></p>
                    <button type="submit" class="btn btn-primary btn-block" value="BtnSubmit">Submit</button>
                    <button type="reset" class="btn btn-primary btn-block" value="BtnSubmit">Reset</button>
                </form>
            </div>*@
        <div id="list">
            <h2>Most Recent Prayer Needs</h2>
            <p>The last 10 prayer requests for your information</p>
            <table class="table table-bordered table-responsive">
                <thead class="table">
                    <tr>
                        <th>Name</th>
                        <th>Prayer Request</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (PrayerRequestViewModel prayer in Model.GetPrayers)
                    {
                        if (@prayer.IsNew)
                        {
                            <tr class="alert-danger">
                                <td>@prayer.SubmittedBy</td>
                                <td>@prayer.PrayerText</td>
                                <td>@prayer.SubmittedDate</td>
                            </tr>
                        }
                        else
                        {
                            <tr class="alert-info">
                                <td>@prayer.SubmittedBy</td>
                                <td>@prayer.PrayerText</td>
                                <td>@prayer.SubmittedDate</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
}
@section scripts {    
    <script>
        $(document).ready(function () {
            $("#btnSubmit").on("click", function (e) {
                e.preventDefault();
                
                $("#EventData").val("submit");

                $("form").submit();
            });

            $("#btnReset").on("click", function (e) {
                e.preventDefault();

                $("#EventData").val("reset");

                $("form").submit();
            });
        });
    </script>
}

